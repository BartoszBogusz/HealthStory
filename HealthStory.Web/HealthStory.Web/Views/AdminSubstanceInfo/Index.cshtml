@model IEnumerable<HealthStory.Web.Models.SubstanceInfo.SubstanceInfoDto>

@{
    ViewData["Title"] = "Index";
}

<h2>Substances List</h2>

@Html.ActionLink("Create new substance info", "Create")
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Max
            </th>
            <th>
                Min
            </th>
            <th>
                Unit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Min)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { substanceId = item.SubstanceInfoId })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { substanceId = item.SubstanceInfoId })
            </td>
        </tr>
        }
    </tbody>
</table>
